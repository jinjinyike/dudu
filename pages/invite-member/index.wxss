/* pages/invite-member/index.wxss */

.invite-mem {
  margin: 60rpx 40rpx;
  background: rgba(89, 171, 234, 1);
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}

.invite-mem image:nth-of-type(1) {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.invite-mem image:nth-of-type(2) {
  width: 352rpx;
  height: 352rpx;
  margin: 40rpx 0;
}

.invite-mem text {
  display: block;
  font-size: 20rpx;
  margin: 40rpx 0;
}

.invite-mem button {
  display: block;
  margin: auto;
  color: #59abea;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  font-size: 24rpx;
  background: #fff;
}

.share {
  position: fixed;
  bottom: 60rpx;
  width: 100%;
  margin: auto;
  color: #646464;
  font-size: 20rpx;
  text-align: center;
}
