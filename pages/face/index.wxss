.intro {
  display: flex;
  padding: 30rpx 80rpx;
  justify-content: space-between;
  box-shadow: 0px 4px 8px 0px rgba(221, 221, 221, 1);
  border-radius: 20px;
}

.intro-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #3c3c3c;
  font-size: 28rpx;
  text-align: center;
}

.intro-item image {
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 30rpx;
}
.list-item{
  margin-bottom: 30rpx;
}





