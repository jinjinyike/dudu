/* pages/sub-order/index.wxss */
.bgcon{
  width: 100%;
  height: 100vh;
  background: #fff;
}


.bg {
  height: 20rpx;
  background: #f5f5f5;
}

.pay {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #acacac;
  line-height: 98rpx;
  text-align: center;
  background: #fff;
}

.pay button {
  width: 300rpx;
  height: 76rpx;
  background: linear-gradient(90deg, rgba(251, 93, 63, 1), rgba(241, 10, 26, 1));
  border-radius: 38rpx;
  color:#fff;
  line-height: 76rpx;
  font-size: 28rpx;
  margin-top: 11rpx;
}
.wx{
  display: flex;
  align-items: center;
  color: #646464;
  font-size: 28rpx;
}
.wx image{
  width: 55rpx;
  height: 53rpx;
  margin-right: 20rpx;
}
