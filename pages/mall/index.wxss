/* pages/mall/index.wxss */
.hot-con{
  display: flex;
  justify-content: space-between;
}
.hot-one {
  width: 370rpx;
  /* height: 420rpx; */
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding: 30rpx 25rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 8px 0px rgba(221, 221, 221, 1);
  border-radius: 15rpx;
}

.one-img {
  width: 220rpx;
  height: 220rpx;
  margin: auto;
}

.number {
  width: 100rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-radius: 14rpx;
  color: #FFF;
  padding: 0 10rpx;
  background: linear-gradient(90deg, rgba(251, 93, 63, 1), rgba(241, 10, 26, 1));
}

.number image {
  height: 25rpx;
}
.hot-text{
  font-size: 24rpx;
  color: #323232;
}
.price{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #E01922;
  font-size: 28rpx;
}
.hot-other{
  display: flex;
  flex-direction: column;
  /* height: 420rpx; */
  justify-content: space-between;
  margin-left: 20rpx;
}
.hot-two {
  width: 320rpx;
  height: 200rpx;
  padding: 20rpx 25rpx;
}
.two-img {
  width: 61;
  height: 120rpx;
  margin: auto;
}
.flex{
  display: flex;
  /* justify-content:  */
}
.hot-three{
  margin-top: 20rpx;
}