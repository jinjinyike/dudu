/* pages/login/login.wxss */

page {
  background: #fff;
}

.logo {
  margin: 200rpx auto 100rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 8rpx 8rpx 0px rgba(100, 100, 100, 0.2);
  border-radius: 50%;
  text-align: center;
  line-height: 300rpx;
}
.logo image{
  width: 241rpx;
  height: 41rpx;
}
.info {
  position: fixed;
  width: 100%;
  bottom: 63rpx;
  text-align: center;
  color: #323232;
  font-size: 22rpx;
}

.btn-con button {
  width: 400rpx;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  border-radius: 400rpx;
  margin-bottom: 30rpx;
}

.btn-con button:nth-of-type(1) {
  background: #59abea;
  color: #fff;
  border: none;
}

.btn-con button:nth-of-type(2) {
  background: #fff;
  color: #323232;
  border: 1px solid #646464;
}

.info text {
  color: #fa242e;
}
