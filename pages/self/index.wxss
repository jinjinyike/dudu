/* pages/self/index.wxss */

.self-top {
  background: #59abea;
  display: flex;
  justify-content: space-between;
  padding: 40rpx 30rpx 105rpx 30rpx;
  color: #fff;
  font-size: 24rpx;
}

.flex {
  display: flex;
  align-items: center;
}

.self-flex {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.self-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.name {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.qrcode {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.qrcode image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}

.self-con {
  padding: 0 20rpx;
  margin-top: -80rpx;
}

.border {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 8px 0px rgba(221, 221, 221, 1);
  padding: 0 20rpx;
  border-radius: 20rpx;
  color: #646464;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.rest-con {
  height: 150rpx;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #646464;
  font-size: 28rpx;
}

.line {
  width: 1px;
  background: #f5f5f5;
  /* border-right: 1px solid #f5f5f5; */
}

.rest-money {
  display: inline-flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 100%;
}

.money {
  font-size: 48rpx;
}

.withrow image {
  width: 54rpx;
  height: 60rpx;
}

.flex-space {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info {
  height: 80rpx;
}

.icons {
  width: 38rpx;
  height: 34rpx;
  margin-right: 20rpx;
}

.back-right {
  width: 16rpx;
  height: 28rpx;
}

.order-status {
  padding: 35rpx 30rpx;
  color: #646464;
  font-size: 22rpx;
}

.order-status image {
  width: 40rpx;
  height: 38rpx;
  margin-bottom: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.list-con {
  padding: 0;
}

.list-items {
  height: 98rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #EEEEEE;
}

.list-items .icon {
  width: 32rpx;
  height: 38rpx;
  margin-right: 20rpx;
  border-bottom: 1px solid #eee;
}
