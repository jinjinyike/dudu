/* pages/become-menber/index.wxss */

.bgcon {
  width: 100%;
  height: 100vh;
  background: #fff;
}

.self-pro {
  text-align: center;
  font-size: 24rpx;
  color: #aaa;
  padding-bottom: 50rpx;
}

.self-pro image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.self-pro view:nth-of-type(1) {
  color: #646464;
  font-size: 32rpx;
  margin: 20rpx;
}

.flex-center {
  justify-content: center;
  margin: 100rpx 0 30rpx 0;
  color: #646464;
  font-size: 28rpx;
}

.flex-center input {
  background: rgba(245, 245, 245, 1);
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  padding: 0 30rpx;
}

.bg {
  height: 20rpx;
  background: #f5f5f5;
}

.pay {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #acacac;
  line-height: 98rpx;
  text-align: center;
  background: #fff;
}

.pay button {
  width: 300rpx;
  height: 76rpx;
  background: linear-gradient(90deg, rgba(251, 93, 63, 1), rgba(241, 10, 26, 1));
  border-radius: 38rpx;
  color: #fff;
  line-height: 76rpx;
  font-size: 28rpx;
  margin-top: 11rpx;
}

.wx {
  display: flex;
  align-items: center;
  color: #646464;
  font-size: 28rpx;
}

.wx image {
  width: 60rpx;
  height: 53rpx;
  margin-right: 20rpx;
}
