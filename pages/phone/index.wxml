<!--pages/phone/index.wxml-->
<view>
  <view class='input-con'>
    <view class='relate'>
      <input placeholder='请输入手机号码' maxlength='11' bindinput='bindinput' data-key='phone'></input>
      <text class='code'>{{btntext}}</text>
    </view>
    <input placeholder='请输入验证码' maxlength='6' bindinput='bindinput' type="number"></input>
  </view>
  <button class='submit' bindtap='submit'>提交绑定
  </button>
</view>
<view class='logo'>
  <image src='../../img/icons/logo.png'></image>
</view>