/* pages/phone/index.wxss */

.input-con {
  margin: 56rpx auto;
  padding: 0 40rpx;
}

.input-con input {
  height: 103rpx;
  line-height: 103rpx;
  padding: 0 23rpx;
  border-bottom: 1px solid #ccc;
  color: #999;
  font-size: 28rpx;
}
.relate{
  position: relative;
}
.code{
  position: absolute;
  right: 0;
  top: 21.5rpx;
  width: 200rpx;
  height: 60rpx;
  border-radius: 200rpx;
  color: #fff;
  line-height: 60rpx;
  display: inline-block;
  font-size: 24rpx;
  background: #59abea;
  text-align: center;
}
.submit {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 200rpx auto 0;
  border-radius: 400rpx;
  background: #59abea;
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.logo {
  position: fixed;
  bottom: 64rpx;
  margin: auto;
  width: 100%;
  text-align: center;
}

.logo image {
  width: 241rpx;
  height: 41rpx;
}
