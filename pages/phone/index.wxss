/* pages/phone/index.wxss */
page{
  background: #fff;
}
.input-con {
  margin: 56rpx auto;
  padding: 0 40rpx;
}

.input-con input {
  height: 103rpx;
  line-height: 103rpx;
  padding: 0 23rpx;
  border-bottom: 1px solid #ccc;
  color: #999;
  font-size: 32rpx;
}
.relate{
  position: relative;
  border-bottom: 1px solid #ccc;
}
.relate input{
  border: none;
  width: 60%;
}
.code{
  position: absolute;
  right: 0;
  top: 21.5rpx;
  width: 200rpx;
  height: 70rpx;
  border-radius: 200rpx;
  color: #fff;
  line-height: 70rpx;
  display: inline-block;
  font-size: 28rpx;
  background: #59abea;
  text-align: center;
  z-index: 200;
}
.submit {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 200rpx auto 0;
  border-radius: 400rpx;
  background: #59abea;
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.logo {
  position: fixed;
  bottom: 64rpx;
  margin: auto;
  width: 100%;
  text-align: center;
}

.logo image {
  width: 241rpx;
  height: 41rpx;
}
.tip{
  font-size: 12px;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}
.tip view{
  margin-bottom: 10rpx;
}
