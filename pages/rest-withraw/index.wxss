/* pages/rest-withraw/index.wxss */

.bgcon {
  width: 100%;
  height: 100vh;
  background: #fff;
}

.bg {
  height: 20rpx;
  background: #f5f5f5;
}

.money-con {
  padding: 30rpx 0;
  text-align: center;
  color: #aaa;
  font-size: 24rpx;
}

.blue {
  color: #fa2a41;
  margin-top: 20rpx;
}

.number {
  font-size: 48rpx;
}

.withraw-con {
  padding: 30rpx 40rpx;
}

.withraw-con view:nth-of-type(1) {
  color: #646464;
  font-size: 28rpx;
}
.rest-text{
  text-align: center;
  font-size: 24rpx;
  color: #CCC;
}
.withraw-con button{
  display: block;
  margin: 134rpx auto;
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
  background: #59ABEA;
  border-radius: 50rpx;
}
.flex-center {
  justify-content: center;
  margin: 100rpx 0 30rpx 0;
  color: #646464;
  font-size: 28rpx;
}

.flex-center input {
  background: rgba(245, 245, 245, 1);
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  padding: 0 30rpx;
}
.intro{
  position: fixed;
  bottom: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}
.intro text:nth-of-type(1){
  margin-right: 50rpx;
}
