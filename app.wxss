/**app.wxss**/
page{
  background: #F5F5F5;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.select-title {
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f8485d;
  font-size: 32rpx;
}
.blue{
  color: #59ABEA;
}
.select-title image {
  width: 28rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.list-item {
  box-shadow: 0px 4px 8px 0px rgba(221, 221, 221, 1);
  border-radius: 15px;
}

.list-item image {
  width: 100%;
  height: 218rpx;
}
.p20{
  padding: 20rpx;
}
.item-text {
  color: #323232;
  font-size: 28rpx;
}

.item-text text {
  color: #59abea;
}

.price-con {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #e01922;
  font-size: 28rpx;
}

.price-con text {
  font-size: 44rpx;
}

.buy {
  width: 200rpx;
  height: 60rpx;
  background: linear-gradient(90deg, rgba(251, 93, 63, 1), rgba(241, 10, 26, 1));
  border-radius: 30px;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
/* 订单商品 */
.pro-cont {
  padding: 20rpx 40rpx;
  background: #fff;
}

.pro-intd {
  display: flex;
  align-items: center;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #eee;
}

.pro-intd image {
  width: 160rpx;
  height: 160rpx;
}

.pro-sell {
  display: inline-flex;
  flex-direction: column;
  height: 160rpx;
  justify-content: space-between;
  color: #646464;
  font-size: 24rpx;
  margin-left: 40rpx;
}

.order-info {
  padding: 40rpx 0;
  display: flex;
  height: 230rpx;
  justify-content: space-between;
  flex-direction: column;
  color: #999;
  font-size: 24rpx;
  border-bottom: 1px solid #eee;
}

.order-money {
  color: #646464;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.order-money button{
  display: block;
  margin: 0 auto;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  border: none;
  border-radius: 60rpx;
  background:linear-gradient(90deg,rgba(251,93,63,1),rgba(241,10,26,1));
  font-size: 28rpx;
}
.box {
  box-shadow: 0px 4px 8px 0px rgba(221, 221, 221, 1);
  border-radius: 20rpx;
  margin: 20rpx;
  background: #fff;
}
/* flex */
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.f28{
  font-size: 28rpx;
}
.f24{
  font-size: 24rpx;
}
.f32{
  font-size: 32rpx;
}